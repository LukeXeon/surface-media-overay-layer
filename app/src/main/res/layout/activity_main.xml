<?xml version="1.0" encoding="utf-8"?>
<android.magic.research.surfacezorder.CertaintySurfaceZOrderLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="android.magic.research.MainActivity2">


    <SurfaceView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.magic.research.mediaoverlay.SurfaceMediaOverlayLayer
        android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/fragment_main" />

    <android.magic.research.mediaoverlay.SurfaceMediaOverlayLayer
        android:translationX="-20dp"
        android:translationY="-20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/fragment_main" />


</android.magic.research.surfacezorder.CertaintySurfaceZOrderLayout>